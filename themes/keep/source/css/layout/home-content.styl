.home-content-container {
  background var(--background-color-1)


  .home-article-list {

    .home-article-item {
      position relative
      overflow hidden

      keep-container(var(--home-post-hover-scale), 0, 2.6rem)

      .home-article-item-top {
        width 100%
        overflow hidden
        background-color var(--background-color-2)

        +keep-tablet() {
          height 7rem
        }

        +keep-mobile() {
          height 6rem
        }

        .cover-img {
          width 100%
          height 100%
          object-fit cover
          transform-origin center center
          transition-t("transform", "0.2", "1", "linear")

          &:hover {
            transform scale(1.04)
          }
        }
      }


      .home-article-item-bottom {
        padding 2rem

        .sticky-icon {
          position absolute
          top 1.2rem
          right 1.2rem
          color var(--text-color-4)
          font-size 1.2rem
          transform rotate(45deg)
        }


        .home-article-title {
          margin 0
          color var(--text-color-2)
          font-weight 600
          font-size 1.4rem
          line-height 1.5


          +keep-tablet() {
            font-size 1.3rem
          }


          +keep-mobile() {
            font-size 1.2rem
          }
        }


        .home-article-content {
          margin 1.8rem 0
          color var(--text-color-3)
          text-align justify
          word-wrap break-word
        }
      }
    }
  }
}
